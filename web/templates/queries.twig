{% extends "base.twig" %}
{% block content %}
	<table class="table table-hover">
        <thead>
          <tr>
            <th style="width: 5%">#</th>
            <th style="width: 25%">Query</th>
            <th style="width: 30%">Domains</th>
            <th style="width: 30%">Actions</th>
          </tr>
        </thead>
        <tbody>
        {% for query in queries %}
          <tr>
            <td>{{ loop.index }}</td>
            <td>{{ query.query }}</td>
            <td>
            	{% for domain in query.domains %}
					<p class="list-group-item-text"><a href="http://{{ domain }}" target="_blank">{{ domain }}</a></p>
				{% endfor %}
            </td>
            <td>
            	<a class="btn btn-primary" href="{{ path('chart') ~ '?q=' ~ query.query }}">Chart</a>
				<a class="btn btn-warning" href="{{ path('edit_query', {query: query.query}) }}">Edit</a>
				<a class="btn btn-danger" href="{{ path('delete_query', {query: query.query}) }}">Delete</a>
			</td>
          </tr>
        {% endfor %}
        </tbody>
      </table>
{% endblock %}